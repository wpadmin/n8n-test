              "type": "string"
            },
            {
              "id": "channelId",
              "name": "channelId",
              "value": "={{ $('Обработать комментарии').item.json.channelId }}",
              "type": "string"
            },
            {
              "id": "postId",
              "name": "postId",
              "value": "={{ $('Обработать комментарии').item.json.postId }}",
              "type": "number"
            },
            {
              "id": "greeting",
              "name": "greeting",
              "value": "={{ $('Получить шаблоны').all().find(x => x.json.setting_key === 'greeting_template')?.json.setting_value }}",
              "type": "string"
            },
            {
              "id": "link",
              "name": "link",
              "value": "={{ $('Получить шаблоны').all().find(x => x.json.setting_key === 'registration_link')?.json.setting_value }}",
              "type": "string"
            },
            {
              "id": "cta",
              "name": "cta",
              "value": "={{ $('Получить шаблоны').all().find(x => x.json.setting_key === 'cta_template')?.json.setting_value }}",
              "type": "string"
            }
          ]
        },
        "options": {}
      },
      "type": "n8n-nodes-base.set",
      "typeVersion": 3.4,
      "position": [1800, -100],
      "id": "prepare-message",
      "name": "Подготовить сообщение"
    },
    {
      "parameters": {
        "url": "http://telegram-client:3000/send",
        "method": "POST",
        "sendBody": true,
        "specifyBody": "json",
        "jsonBody": "={{ {\n  \"userId\": $json.senderId,\n  \"message\": $json.greeting + \"\\n\\n\" + $json.link + \"\\n\\n\" + $json.cta\n} }}",
        "options": {}
      },
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 4.2,
      "position": [2000, -100],
      "id": "send-message",
      "name": "Отправить сообщение"
    },
    {
      "parameters": {
        "operation": "executeQuery",
        "query": "=INSERT INTO user_contacts (user_chat_id, channel_id, post_id, last_contacted_at)\nVALUES ('{{ $('Подготовить сообщение').item.json.senderId }}'::bigint, hashtext('{{ $('Подготовить сообщение').item.json.channelId }}')::bigint, {{ $('Подготовить сообщение').item.json.postId }}, NOW())\nON CONFLICT (user_chat_id, channel_id, post_id) \nDO UPDATE SET last_contacted_at = NOW()",
        "options": {}
      },
      "type": "n8n-nodes-base.postgres",
      "typeVersion": 2.6,
      "position": [2200, -100],
      "id": "update-contact",
      "name": "Обновить контакт"
    },
