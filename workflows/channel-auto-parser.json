        "options": {}
      },
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 4.2,
      "position": [200, 0],
      "id": "get-comments",
      "name": "Получить комментарии"
    },
    {
      "parameters": {
        "jsCode": "const response = $input.first().json;\nconst comments = response.comments || [];\n\nconst validComments = comments.filter(c => c.senderId && c.message);\n\n// Получаем первые 3 комментария чтобы не спамить\nconst limitedComments = validComments.slice(0, 3);\n\nreturn limitedComments.map(comment => ({\n  json: {\n    senderId: String(comment.senderId),\n    username: comment.senderUsername,\n    firstName: comment.senderFirstName,\n    message: comment.message,\n    channelId: String(response.channelId),\n    postId: Number(response.postId)\n  }\n}));"
      },
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [1000, 0],
      "id": "process-comments",
      "name": "Обработать комментарии"
    },
    {
      "parameters": {
        "operation": "executeQuery",
        "query": "=SELECT user_chat_id FROM user_contacts WHERE user_chat_id = '{{ $json.senderId }}'::bigint AND channel_id = hashtext('{{ $json.channelId }}')::bigint AND post_id = {{ $json.postId }}",
        "options": {}
      },
      "type": "n8n-nodes-base.postgres",
      "typeVersion": 2.6,
      "position": [1200, 0],
      "id": "check-sent",
      "name": "Проверить отправлено"
    },
    {
      "parameters": {
        "conditions": {
          "options": {
            "caseSensitive": true,
            "leftValue": "",
            "typeValidation": "strict"
          },
          "conditions": [
            {
              "id": "condition1",
              "leftValue": "={{ $json.user_chat_id }}",
              "rightValue": "",
              "operator": {
                "type": "string",
                "operation": "notExists",
                "singleValue": true
              }
            }
          ],
          "combinator": "and"
        },
        "options": {}
      },
      "type": "n8n-nodes-base.if",
      "typeVersion": 2,
      "position": [1400, 0],
      "id": "filter-new",
      "name": "Только новые"
    },
    {
      "parameters": {
        "operation": "executeQuery",
        "query": "SELECT setting_key, setting_value FROM bot_settings WHERE setting_key IN ('greeting_template', 'registration_link', 'cta_template')",
        "options": {}
      },
      "type": "n8n-nodes-base.postgres",
      "typeVersion": 2.6,
      "position": [1600, -100],
      "id": "get-templates",
      "name": "Получить шаблоны"
    },
    {
      "parameters": {
        "assignments": {
          "assignments": [
            {
              "id": "senderId",
